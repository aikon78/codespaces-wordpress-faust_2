{
  "name": "WordPress + Faust.js Development",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspaces/codespaces-wordpress-faust_2",

  "forwardPorts": [3000, 8080, 3306, 8081],

  "portsAttributes": {
    "3000": {
      "label": "Next.js Frontend",
      "onAutoForward": "notify"
    },
    "8080": {
      "label": "WordPress",
      "onAutoForward": "notify"
    },
    "8081": {
      "label": "phpMyAdmin",
      "onAutoForward": "ignore"
    },
    "3306": {
      "label": "MySQL",
      "onAutoForward": "ignore"
    }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "bradlc.vscode-tailwindcss",
        "GraphQL.vscode-graphql",
        "GraphQL.vscode-graphql-syntax",
        "ms-azuretools.vscode-docker",
        "felixfbecker.php-debug",
        "bmewburn.vscode-intelephense-client"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit"
        }
      }
    }
  },

  "postCreateCommand": "npm install && chmod +x .devcontainer/*.sh && .devcontainer/install-docker.sh && .devcontainer/setup.sh",

  "postStartCommand": "chmod +x .devcontainer/setup.sh && .devcontainer/setup.sh",

  "remoteUser": "node",

  "mounts": [
    "source=/var/run/docker.sock,target=/var/run/docker-host.sock,type=bind"
  ]
}
